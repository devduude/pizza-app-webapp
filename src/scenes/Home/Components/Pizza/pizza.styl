.pizza_container
  overflow hidden
  position relative
  &__title
    text-align center
  &__button
    cursor pointer
  &__price_and_button
    display flex
    align-items center
    justify-content space-between
  &__overlay
    position absolute
    top 0
    left 0
    width 100%
    height 440px
    background rgba(0,0,0,0.55)
    color white
    display: flex
    align-items center
    justify-content center
    text-align center
    opacity 0
    transition opacity 0.28s
    &--blur
      backdrop-filter blur(2px)
    &:hover
      opacity 1
      & > *
        transform translateY(0)
    & > *
      transform translateY(-20px)
      transition transform 0.28s
  &__description
    margin: 25px
    font-size 18px
    font-family 'Quicksand'
