.home_container
  display grid
  gap 1rem
  &__pizzas
    display grid
    grid-template-columns repeat(4, minmax(200px, 1fr))
    grid-template-columns repeat(auto-fit, minmax(200px, 1fr))
    gap 1rem
  &__topbar
    align-items end
    display grid
    height 50px
    grid-template-columns repeat(2, 1fr)
  &__currency
    cursor pointer
  &__left_side
    justify-self flex-start
    position relative
    & button
      position relative
      bottom 2px
  &__title
    font-size 30px
    text-decoration underline
    margin-right 15px
  &__right_side
    justify-self flex-end
    font-size 20px
    position relative
    & span
      position relative
      bottom 2px
  &__basket
    margin-left 5px
    color inherit
    text-decoration none
