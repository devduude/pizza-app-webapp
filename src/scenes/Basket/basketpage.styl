.basket_container
  display grid
  gap 1rem
  &__topbar
    align-items end
    display grid
    height 50px
    grid-template-columns repeat(2, 1fr)
  &__currency
  cursor pointer
  &__left_side
    justify-self flex-start
  &__title
    margin-right 15px
    justify-self flex-start
    font-size 30px
    color inherit
    text-decoration none
  &__basket
    justify-self flex-end
    font-size 20px
    text-decoration underline
  & input
    width 100%
